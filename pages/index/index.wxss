/**index.wxss**/
.container {
  height: 2800rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  background-color: #1f2833;
}

.header {
  width: 100%;
  height:600rpx;
  background-color: #1f2833;
  display: flex;
  flex-direction: column;

}

.bgimg {
  display: block;
  width: 100%;
  height: 100%;
}

.figure {
  display: block;
  width: 290rpx;
  height: 400rpx;
  position: absolute;
  margin: 220rpx 0 0 70rpx;
  border-radius: 10px;
  box-shadow: 0 7px 16px 2px rgba(0, 0, 0, 0.7);
}

.name{
  width: 280rpx;
  height: 100rpx;
  background-color:rgba(11, 12, 16, 0.8);
  position: relative;
  bottom: 100rpx;
  font-size: 16px;
  color: #c5c6c7;
  display: flex;
  flex-direction: column;
  padding: 3px;
  border-radius: 5px;
}

.phone {
  display: block;
  position: absolute;
  margin: -70rpx 0 0 590rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 999;
}

.content {
  width: 100%;
  height: 2300rpx;
  background-color: #1f2833;
  margin-top: -100rpx;
}

.contentHeader {
  height: 240rpx;
  margin-bottom: 50rpx;
}

.textSelection {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 10rpx 50rpx 0;
}

text {
  display: block;
  color: #c5c6c7;
  font-size: 17px;
  margin-left: 10rpx;
}

.textH1 {
  font-size: 19px;
  color: #66fcf1;
  margin: 25rpx 0 25rpx -10rpx;
}

swiper, swiper-item, .sheet {
  width: 100%;
  height: 100%;
}

.contentImage {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin: 30rpx 0 0;
}

.contentImage image {
  border-radius: 10px;
  box-shadow: 0 7px 16px 2px rgba(0, 0, 0, 0.7);
}

.sheet {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}